<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_path"
        android:layout_marginTop="@dimen/largePadding"
        android:padding="@dimen/smallPadding"/>

    <ImageView
        android:id="@+id/ivSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_cog"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/largePadding"
        android:padding="@dimen/smallPadding"/>

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_eclipse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/xxlargePadding"
        android:padding="@dimen/smallPadding"/>

    <TextView
    android:id="@+id/tvName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hai Phan"
    android:textSize="@dimen/titleSize"
    android:textColor="@android:color/white"
    android:textStyle="bold"
    android:layout_below="@id/ivAvatar"
    android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ho Chi Minh City"
        android:textSize="@dimen/textSize"
        android:textColor="@android:color/white"
        android:layout_below="@id/tvName"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tvInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/smallPadding">

        <ImageView
            android:id="@+id/ivHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_heart"
            android:padding="@dimen/xsmallPadding"
            android:layout_marginRight="@dimen/smallPadding"/>

        <ImageView
            android:id="@+id/ivPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_composite_path"
            android:padding="@dimen/xsmallPadding"
            android:layout_marginLeft="@dimen/smallPadding"/>

    </LinearLayout>

</RelativeLayout>